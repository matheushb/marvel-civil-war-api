generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Character {
  id             String           @id @default(cuid())
  name           String
  description    String
  thumbnail      String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  CharacterComic CharacterComic[]
}

model Comic {
  id             String           @id @default(cuid())
  title          String
  description    String
  thumbnail      String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  CharacterComic CharacterComic[]
  ComicCreator   ComicCreator[]
}

model Creator {
  id           String         @id @default(cuid())
  name         String
  role         CreatorRole
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  ComicCreator ComicCreator[]
}
model CharacterComic {
  id          String    @id @default(cuid())
  character   Character @relation(fields: [characterId], references: [id])
  characterId String
  comic       Comic     @relation(fields: [comicId], references: [id])
  comicId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ComicCreator {
  id        String      @id @default(cuid())
  comic     Comic       @relation(fields: [comicId], references: [id])
  comicId   String
  creator   Creator     @relation(fields: [creatorId], references: [id])
  creatorId String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum CreatorRole {
  WRITER
  PENCILER
  INKER
  COLORIST
  LETTERER
  EDITOR
  COVER_ARTIST
  OTHER
}
